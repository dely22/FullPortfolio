<!DOCTYPE html>
<html lang="en">

  <%- include('./includes/portohead.ejs') %> 

<body class="bg-light" style="color: rgb(102, 62, 96);">
   <main class="container">
    <!-- top nav start -->
    <%- include('./includes/topNav.ejs') %> 
    <!-- top nav end -->

    <!-- side sec -->
    <div class="row">
    <!-- Dashboard sideNav Section -->
    <%- include('./includes/sideNav.ejs') %> 

    <!-- Educations Sec  -->
   <section class="col-lg-8 col-md-8 col-12" id="serv">
        <div class="card shadow p-3">
            <!-- head Sec Title -->
            <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                <h3 class="fw-bold text-prof">Educations</h3>
                <a role="button"
                    data-bs-toggle="modal"
                    data-bs-target="#addEducation">
                    <i class="fa fa-plus fw-bold fs-5 text-prof"></i>
                </a>
            </div>

            <!-- Sec Info -->
            <div class="card-body p-0">
                <%if(Education.length){ %>
                <% for(let item3 =0; item3< Education.length; item3++){ %>
                    
            <div class="row">
               
                    <!--  Education  -->
                    <div class="col-12 mb-2">
                        <div class="shadow-sm p-3">
                            <div class="d-flex justify-content-between mb-2">    
                                <h5> <%= Education[item3].Education_period %></h5>
                                <h5> <%= Education[item3].Education_name %></h5>
                                <div> <%= Education[item3].Education_describe %></div>
                            <div>
                                <a class="mx-2" role="button" data-bs-toggle="modal" data-bs-target="#editEducation<%= Education[item3]._id %>">
                                    <i class="fa fa-pencil-square-o"style="font-size: 17px; color: var(--trash-color);"></i>
                                </a>
                                <a role="button" data-bs-toggle="modal" data-bs-target="#delete<%= Education[item3]._id %>">
                                    <i class="fa fa-trash-o"style="font-size: 17px; color: var(--trash-color);"></i>
                                </a>
                            </div>
                            </div>
                        </div>
                    </div>
                    <!-- Edit Education -->
                    <div class="modal fade" id="editEducation<%=Education[item3]._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content p-3">
                                            <div class="modal-header">
                                                <h4 class="modal-title fw-bold text-center" id="exampleModalLabel">Edit Experience</h4>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                    <form class="row g-3 needs-validation"  action="Edit_Education" method="post" >
                                                            <input  type="hidden" name="id" value="<%=Education[item3]._id%>">
                                                            <div class="col-12">
                                                                <input type="text" class="form-control rounded-2" id="" name="Education_period" placeholder="Education period 2002-2022 "  value="<%=Education[item3].Education_period%>">
                                                            </div>
                                                            <div class="col-12">
                                                                <input type="text" class="form-control rounded-2"  name="Education_name" placeholder="Education_name"  value="<%=Education[item3].Education_name%>">
                                                            </div>
                                                            <div class="col-12">
                                                                <input type="text" class="form-control rounded-2"  name="Education_describe" placeholder="Education describe"  value="<%=Education[item3].Education_describe%>">
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button class="btn btn-primary d-block " type="submit">Save</button>
                                                            </div>
                                                        </form>
                                            </div>
                                                    
                                        </div>
                                    </div>
                    </div>
                    <!-- Delete Education modal -->
                    <div class="modal fade" id="delete<%= Education[item3]._id %>"  tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                        <div class="modal-body fw-bold d-flex justify-content-lg-center align-items-center flex-column" >
                            <i class="bi bi-exclamation-circle fs-1 text-danger"></i>
                            <h3 class="fs-4">Do you want to delete?</h3>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary"  data-bs-dismiss="modal">
                                No
                            </button>
                            <a type="submit" class="btn btn-danger" href="/delete_Education/<%=Education[item3]._id%>">Yes</a>
                        </div>
                        </div>
                    </div>
                    </div>
              
            </div>
              <%}%> 
                <%  } else{ %>
                            <h5 class="p-3 px-4"> There is no Education ! </h5>
                            <h5 class=" px-4"> Add Some Educations, I Know That U r an Expert Person ^^ </h5>
                        <%}%> 
            </div>
        </div>
    </section>
    <!-- add Educations -->
    <div class="modal fade" id="addEducation" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h4 class="modal-title fw-bold text-center" id="exampleModalLabel">Add Educations</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="row g-3 needs-validation"  action="/addEducation" method="post" >
                    
                        <div class="col-12">
                            <input type="text" class="form-control rounded-2" id="" name="Education_period" placeholder="Education period">
                        </div>
                        <div class="col-12">
                            <input type="text" class="form-control rounded-2"  name="Education_name" placeholder="Education name">
                        </div>
                          <div class="col-12">
                            <input type="text" class="form-control rounded-2"  name="Education_describe" placeholder="Education describe">
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary d-block " type="submit">Add</button>
                        </div>
                    </form>
                </div>
                
            </div>
        </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
        $("#, #skil, #Edu, #expe, #, #wrk, #social").hide();
        }); 
    
    </script>


</body>
</html>