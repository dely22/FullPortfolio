<!DOCTYPE html>
<html lang="en">

  <%- include('./includes/portohead.ejs') %> 

<body class="bg-light" style="color: rgb(102, 62, 96);">
   <main class="container">
    <!-- top nav start -->
    <%- include('./includes/topNav.ejs') %> 
    <!-- top nav end -->

    <!-- side sec -->
    <div class="row">
    <!-- Dashboard sideNav Section -->
    <%- include('./includes/sideNav.ejs') %> 

    <!-- Experincs Sec  -->
   <section class="col-lg-8 col-md-8 col-12" id="serv">
        <div class="card shadow p-3">
            <!-- head Sec Title -->
            <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                <h3 class="fw-bold text-prof">Experincs</h3>
                <a role="button"
                    data-bs-toggle="modal"
                    data-bs-target="#addExperinc">
                    <i class="fa fa-plus fw-bold fs-5 text-prof"></i>
                </a>
            </div>

            <!-- Sec Info -->
            <div class="card-body p-0">
                  <% let i =1; if(Experinc.length){ %>
                    <% for(let item3 =0; item3< Experinc.length; item3++){ %>
                        <!-- <%= i++ %>  -->
            <div class="row">
               
                    <!--  Experinc  -->
                    <div class="col-12 mb-2">
                        <div class="shadow-sm p-3">
                            <div class="d-flex justify-content-between mb-2">    
                                <h5> <%= Experinc[item3].Experinc_period %></h5>
                                <h5> <%= Experinc[item3].Experinc_name %></h5>
                                <div> <%= Experinc[item3].Experinc_describe %></div>
                            <div>
                                <a class="mx-2" role="button" data-bs-toggle="modal" data-bs-target="#editExperinc<%= Experinc[item3]._id %>">
                                    <i class="fa fa-pencil-square-o"style="font-size: 17px; color: var(--trash-color);"></i>
                                </a>
                                <a role="button" data-bs-toggle="modal" data-bs-target="#delete<%= Experinc[item3]._id %>">
                                    <!--  -->
                                    <i class="fa fa-trash-o"style="font-size: 17px; color: var(--trash-color);"></i>
                                </a>
                            </div>
                            </div>
                        </div>
                    </div>
                    <!-- Edit Experinc -->
                    <div class="modal fade" id="editExperinc<%=Experinc[item3]._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content p-3">
                                            <div class="modal-header">
                                                <h4 class="modal-title fw-bold text-center" id="exampleModalLabel">Edit Experience</h4>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                    <form class="row g-3 needs-validation"  action="Edit_Experinc" method="post" >
                                                            <input  type="hidden" name="id" value="<%=Experinc[item3]._id%>">
                                                            <div class="col-12">
                                                                <input type="text" class="form-control rounded-pill" id="" name="Experinc_period" placeholder="Experinc period 2002-2022 "  value="<%=Experinc[item3].Experinc_period%>">
                                                            </div>
                                                            <div class="col-12">
                                                                <input type="text" class="form-control rounded-pill"  name="Experinc_name" placeholder="Experinc_name"  value="<%=Experinc[item3].Experinc_name%>">
                                                            </div>
                                                            <div class="col-12">
                                                                <input type="text" class="form-control rounded-pill"  name="Experinc_describe" placeholder="Experinc describe"  value="<%=Experinc[item3].Experinc_describe%>">
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button class="btn btn-primary d-block " type="submit">Save</button>
                                                            </div>
                                                        </form>
                                            </div>
                                                    
                                        </div>
                                    </div>
                    </div>
                    <!-- Delete Experinc modal -->
                    <div class="modal fade" id="delete<%= Experinc[item3]._id %>"  tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                        <div class="modal-body fw-bold d-flex justify-content-lg-center align-items-center flex-column" >
                            <i class="bi bi-exclamation-circle fs-1 text-danger"></i>
                            <h3 class="fs-4">Do you want to delete?</h3>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary"  data-bs-dismiss="modal">
                                No
                            </button>
                            <a type="submit" class="btn btn-danger" href="/delete_Experinc/<%=Experinc[item3]._id%>">Yes</a>
                        </div>
                        </div>
                    </div>
                    </div>
              
            </div>
              <%}%> 
                <%  } else{ %>
                            <h5 class="p-3 px-4"> There is no Experinc ! </h5>
                            <h5 class=" px-4"> Add Some Experincs, I Know That U r an Expert Person ^^ </h5>
                        <%}%> 
            </div>
        </div>
    </section>
    <!-- add Experincs -->
    <div class="modal fade" id="addExperinc" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content p-3">
                <div class="modal-header">
                    <h4 class="modal-title fw-bold text-center" id="exampleModalLabel">Add Experincs</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="row g-3 needs-validation"  action="/addExperinc" method="post" >
                    
                        <div class="col-12">
                            <input type="text" class="form-control rounded-2" id="" name="Experinc_period" placeholder="Experinc icon">
                        </div>
                        <div class="col-12">
                            <input type="text" class="form-control rounded-2"  name="Experinc_name" placeholder="Experinc name">
                        </div>
                          <div class="col-12">
                            <input type="text" class="form-control rounded-2"  name="Experinc_describe" placeholder="Experinc describe">
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary d-block " type="submit">Add</button>
                        </div>
                    </form>
                </div>
                
            </div>
        </div>
    </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
        $("#, #skil, #Edu, #expe, #, #wrk, #social").hide();
        }); 
    
    </script>


</body>
</html>